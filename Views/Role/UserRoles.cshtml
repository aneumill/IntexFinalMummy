<!--This ist the Admin User Roles View where the user ca see what the roles are and edit them -->
<div class="container">
    <h1>Admin</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Change Priveledges</td>
            </tr>
        </thead>
        <tbody>
            <!--The for Each loops through all the Admins and prints them out, the other loops do the same thing-->
            @foreach (var user in ViewBag.Admin)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>
                        <form asp-action="EditRole">
                            <input type="hidden" value="@user.Id" name="user" />
                            <input type="hidden" value="Admin" name="role" />
                            <button class="btn-dark" type="submit">Edit User</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <h1>Users</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Change Privileges</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in ViewBag.User)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>
                        <form class="text-center"asp-action="EditRole">
                            <input type="hidden" value="@user.Id" name="user" />
                            <input type="hidden" value="User" name="role" />
                            <button class="btn-dark" type="submit">Edit User</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h1>Unassigned Users</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Change Priveledges</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in ViewBag.Unassigned)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>
                        <form asp-action="EditRole">
                            <input type="hidden" value="@user.Id" name="user" />
                            <input type="hidden" value="Unassigned" name="role" />
                            <button class="btn-dark"type="submit">Edit User</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>



</div>